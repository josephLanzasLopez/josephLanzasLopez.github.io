    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-tags me-1"></i>
            Historial de ventas
        </div>
        <div class="card-body">

            <form>
                <div class="row align-items-end">
                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">Fecha de inicio:</label>
                            <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" />
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">Fecha de Fin:</label>
                            <input class="form-control" type="text" id="txtfechafin" name="fechafin" />
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">ID factura:</label>
                            <input class="form-control" type="text" id="txtfactura" name="fechafactura" />
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="d-grid mb-2">
                            <button class="btn btn-primary" id="btnbuscar" type="button"><i class="fas fa-search"></i>Buscar</button>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="d-grid mb-2">
                            <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i>Exportar</button>
                        </div>
                    </div>
                </div>
            </form>

            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <table id="tabla" class="display cell-border" style="width:100%">
                        <thead>
                            <tr>
                                <th>Fecha venta</th>
                                <th>Cliente</th>
                                <th>ID de factura</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>




        </div>




        <script>

            var primerDiaDelAno = new Date(new Date().getFullYear(), 0, 1);

            // Obtener el último día del año actual
            var ultimoDiaDelAno = new Date(new Date().getFullYear(), 11, 31);

            // Inicializar Datepicker para fecha de inicio y establecerla en el primer día del año
            $("#txtfechainicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', primerDiaDelAno);

            // Inicializar Datepicker para fecha de fin y establecerla en el último día del año
            $("#txtfechafin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', ultimoDiaDelAno)

            var Url = '@Url.Action("listaReporte", "Dashboard")' +
                "?fechainicio=" + $("#txtfechainicio").val() +
                "&fechafin=" + $("#txtfechafin").val() +
            "&idFactura=" + $("#txtfactura").val();

var tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,

            columns: [
                { "data": "FechaVenta" },
                { "data": "cliente" },
                { "data": "Factura" },
                { "data": "total" }
    ],
    "language": {
        "url":"https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
    }
        });

        // Manejar clic en el botón buscar
        $("#btnbuscar").on("click", function () {
            var nueva_Url = '@Url.Action("listaReporte", "Dashboard")' +
                "?fechainicio=" + $("#txtfechainicio").val() +
                "&fechafin=" + $("#txtfechafin").val() +
                "&idFactura=" + $("#txtfactura").val();

            // Actualizar datos de la DataTable
            tabladata.ajax.url(nueva_Url).load();
        });



    $(document).ready(function () {

        // Llamar a la acción VerDashboard al cargar la página
        $.ajax({
            url: '@Url.Action("VerDashboard", "Dashboard")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var objeto = data; // Dependiendo de la estructura del objeto devuelto

                // Asegúrate de que estas propiedades existan en tu objeto
                $("#totalCliente").text(objeto.TotalCliente);
                $("#totalVenta").text(objeto.TotalVentas);
                $("#Totalproducto").text(objeto.TotalProducto);
            },
            error: function () {
                console.error('Error al obtener datos del dashboard');
            }
        });
    });

        </script>
    </div>
