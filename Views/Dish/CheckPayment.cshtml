
@model IEnumerable<LN_WEB.Entities.CartEnt>


<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
               
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 text-center">
                            <div class="breadcrumb-text">
                                <h3 style="font-family: 'Lobster', cursive; color: #F28123; ">La Catrina</h3>
                                <h2 style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Carrito de compras</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="mb-3 form-check">
                        <label class="form-check-label" for="ParaLlevar" style="text-align: left">
                            ¿Para Llevar?
                        </label>
                        <input class="form-check-input" type="checkbox" id="ParaLlevar" name="ParaLlevar">
                    </div>
                    <div>
                        <p class="mb-0">
                            <span class="text-muted">Ordenar por:</span> <a href="#!" class="text-body">
                                Precio <i class="fas fa-angle-down mt-1"></i>
                            </a>
                        </p>
                    </div>
                </div>


                <!-- Campo único "Nota" -->
                <div class="mb-3 text-center">
                    <label for="Nota" class="form-label">Nota:</label>
                    <textarea class="form-control" id="Nota" name="Nota"></textarea>
                </div>

                @foreach (var item in Model)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.Name</p>
                                    <p>
                                        <span class="text-muted">Cantidad: </span>
                                        <input id="quantity_@item.IdDishCart" min="0" name="quantity" value="@item.Quantity" type="number"
                                               class="form-control form-control-sm" />
                                    </p>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button class="btn btn-link px-2" onclick="changeQuantity(@item.IdDishCart, -1)">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button class="btn btn-link px-2" onclick="changeQuantity(@item.IdDishCart, 1)">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                    <button class="btn btn-primary" onclick="UpdateQuantity(@item.IdDishCart)">Actualizar</button>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">₡@item.Price</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger" onclick="RemoveFromCart(@item.IdDishCart)">
                                        <i class="fas fa-trash fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Productos
                                    <span><strong>₡@Model.Sum(x => x.Price * x.Quantity)</strong></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Envío
                                    <span>Gratis</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total</strong>
                                    </div>

                                    <span><strong>₡@Model.Sum(x => x.Price * x.Quantity)</strong></span>
                                </li>
                                <hr />
                                <div class="card-body justify-content-center text-center">
                                    <button type="button" class="btn btn-warning btn-block btn-lg" onclick="realizarTransaccionPaypal(@Model.Sum(x => x.Price))">Pagar</button>
                                </div>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</section>

<script>




        function realizarTransaccionPaypal(total) {
    // Realizar la transacción de PayPal con el total del carrito
    $.ajax({
        url: '@Url.Action("Paypal", "Paypal")',
        type: "POST",
        data: JSON.stringify({ total: total }),
        dataType: "json",
        contentType: "application/json; charset=utf-8",
        success: function (data) {
            console.log(data);

            if (data.status) {
                var jsonresult = JSON.parse(data.respuesta);
                console.log(jsonresult);

                var links = jsonresult.links;
                var resultado = links.find(item => item.rel === "approve");


                window.location.href = resultado.href;
            } else {
                alert("Vuelva a intentarlo más tarde");
            }
        },
    });
}

function changeQuantity(itemId, amount) {
        var currentQuantity = parseInt($("#quantity_" + itemId).val()) || 0;
        var newQuantity = Math.max(currentQuantity + amount, 0);
        $("#quantity_" + itemId).val(newQuantity);
    }

    function UpdateQuantity(itemId) {
        var quantity = $("#quantity_" + itemId).val();

        $.ajax({
            url: '@Url.Action("UpdateDishCartQuantity", "Dish")',
            type: "POST",
            data: { dishCartId: itemId, quantity: quantity },
            success: function () {
                location.reload(); // Recargar la página después de la actualización
            },
            error: function () {
                alert("Error al actualizar la cantidad. Vuelva a intentarlo más tarde.");
            }
        });
    }

    function RemoveFromCart(itemId) {
        $.ajax({
            url: '@Url.Action("RemoveFromCart", "Carrito")',
            type: 'POST',
            data: { itemId: itemId },
            success: function () {
                location.reload();
            },
            error: function () {
                alert("Error al eliminar el artículo. Vuelva a intentarlo más tarde.");
            }
        });
    }





</script>

</div>